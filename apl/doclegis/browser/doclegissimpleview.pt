<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="apl.doclegis">
<body>
    <div metal:fill-slot="main">
        <tal:main-macro metal:define-macro="main">
        	<h1 tal:content="context/title">title</h1>

            <div class="doclegis_label" i18n:translate="description"></div>
            <div tal:content="context/description">desc</div>

            <div class="doclegis_label" i18n:translate="Numero ou ID"></div>
            <div tal:content="context/numero">id</div>

            <div class="doclegis_label" i18n:translate="Corps de texte"></div>
            <div tal:content="structure context/text">text</div>

            <div class="doclegis_label" i18n:translate="description"></div>
			<div tal:content="view/get_documenttype">type</div>
            
            <div class="doclegis_label" i18n:translate="Date"></div>
 			<div tal:content="view/get_date">date</div>

            <div class="doclegis_label" i18n:translate="Date de publication au moniteur si connue"></div>
            <div tal:content="view/get_datepublication">desc</div>

            <div class="doclegis_label" i18n:translate="Institution(s)"></div>
			<div tal:content="view/get_inst">institution</div>

            <div class="doclegis_label" i18n:translate="Theme(s)"></div>
		    <div tal:content="view/get_themes">theme</div>

            <div class="doclegis_label" i18n:translate="Commune (si applicable)"></div>  
			<div tal:content="view/get_communes">commune</div>

            <div class="doclegis_label" i18n:translate="Url ou se trouve le document"></div>
            <a href="" tal:attributes="href context/url" 
                       tal:content="context/url" target="_blank">url</a>

            <div class="doclegis_label" i18n:translate="Fichier a attacher"></div>
            <!--div tal:content="view/get_fichier">fichier</div-->
            <a tal:attributes="href string:${context/absolute_url}/@@download/fichier/${context/fichier/filename}" 
                tal:content="string:${context/fichier/filename}"> down</a>

        </tal:main-macro>
    </div>
</body>
</html>
